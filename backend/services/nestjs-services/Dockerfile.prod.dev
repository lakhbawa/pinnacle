# Stage 1: Build
FROM node:22-alpine AS builder

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY tsconfig*.json ./
COPY nest-cli.json ./

# Install dependencies
RUN npm ci

# Copy source code and proto files
COPY apps/ ./apps/
COPY libs/ ./libs/
COPY proto/ ./proto/

# Build argument for which service to build
ARG SERVICE_NAME

# Generate Prisma client for the specific service
RUN npx prisma generate --schema=./apps/${SERVICE_NAME}/prisma/schema.prisma --config=./apps/${SERVICE_NAME}/prisma.config.ts

# Build the specific service
RUN npm run build ${SERVICE_NAME}

# Stage 2: Production
FROM node:22-alpine AS production

WORKDIR /app

# Redeclare ARG after FROM (it doesn't carry over)
ARG SERVICE_NAME

# Copy package files and install ALL dependencies (including devDependencies for ts-node)
COPY package*.json ./
COPY tsconfig*.json ./
COPY nest-cli.json ./
RUN npm ci

# Copy built application
COPY --from=builder /app/dist/apps/${SERVICE_NAME} ./dist/

# Copy proto files (needed at runtime for gRPC)
COPY --from=builder /app/proto ./proto/

# Copy Prisma schema (for migrations)
COPY --from=builder /app/apps/${SERVICE_NAME}/prisma ./prisma/
COPY --from=builder /app/apps/${SERVICE_NAME}/prisma.config.ts ./prisma.config.ts

# Copy source files (needed for seeding with ts-node)
COPY --from=builder /app/apps/${SERVICE_NAME} ./apps/${SERVICE_NAME}/
COPY --from=builder /app/libs ./libs/

# Set environment
ENV NODE_ENV=production

# Run the service
CMD ["sh", "-c", "node dist/src/main.js"]